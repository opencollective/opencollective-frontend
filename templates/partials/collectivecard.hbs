<style>
.CollectiveCard {
  vertical-align: top;
  position: relative;
  box-sizing: border-box;
  display: inline-block;
  width: 170px;
  height: 250px;
  border-radius: 5px;
  background-color: #ffffff;
  box-shadow: 0 1px 3px 0 rgba(45, 77, 97, 0.2);
  margin: 0px 6px 8px 2px;
  overflow: hidden;
  text-decoration: none !important;
}
.CollectiveCard-head {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100px;
  border-bottom: 3px solid #46b0ed;
  background-size: cover;
  background-position: center;
}
.CollectiveCard-head img {
  margin: 20px auto;
}
.CollectiveCard-body {
  padding: 10px 0px;  
}
.CollectiveCard-name, .CollectiveCard-description {
  overflow: hidden;
  text-overflow: ellipsis;
}
.CollectiveCard-name {
  font-size: 16px;
  font-weight: 300;
  text-align: center;
  color: #303233;
  margin: 5px;
  white-space: nowrap;
}
.CollectiveCard-description {
  height: 50px;
  font-size: 12px;
  font-weight: normal;
  line-height: 1.44;
  text-align: center;
  color: #787d80;
  margin: 0 5px;
}
.CollectiveCard-footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 45px;
  border-top: 1px solid #f2f2f2;
}
.CollectiveCard-metric {
  float: left;
  width: 50%;
  margin: 9px 0px;
}
.CollectiveCard-metric-value {
  font-size: 16px;
  font-weight: normal;
  text-align: center;
  color: #303233;
}
.CollectiveCard-metric-label {
  font-size: 8.5px;
  text-align: center;
  margin: 1px;
  color: #a8afb3;
  text-transform: uppercase;
}
.SponsoredCard-footer {
  border-top: solid 1px #e1e9ed;
  padding: 10px;
  text-align: center;
}
.SponsoredCard-type {
  min-height: 13px;
  font-family: Montserrat;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 3px;
  color: #75cc1f;
  text-transform: uppercase;
}
.SponsoredCard-amount {
  min-height: 18px;
  font-family: Lato;
  font-size: 12px;
  font-weight: 500;
  line-height: 1.5;
  text-align: center;
  color: #aab0b3;
  text-transform: capitalize;
}
</style>

<div class="CollectiveCard">
  <a href="https://opencollective.com/{{slug}}?{{@root.utm}}">
    <div>
      <div class='CollectiveCard-head' style="background-image:url('{{resizeImage backgroundImage width=320}}');{{#if settings.style.hero.cover.background}}background-color:{{settings.style.hero.cover.background}};{{/if}}">
        <center><img src="{{resizeImage logo width=240}}" height="64" /></center>
      </div>
      <div class='CollectiveCard-body'>
        <div class='CollectiveCard-name'>{{name}}</div>
        <div class='CollectiveCard-description'>{{mission}}</div>
      </div>
      {{#if totalDonations}}
        <div class='SponsoredCard-footer'>
          <div class='SponsoredCard-type'>{{tier}}</div>
          <div class='SponsoredCard-amount'>{{{currency totalDonations currency=currency}}}</div>
        </div>
      {{/if}}
      {{#if contributorsCount}}
      <div class='CollectiveCard-footer'>
        <div class='clearfix mt2'>
          <div class='CollectiveCard-metric'>
            <div class='CollectiveCard-metric-value'>{{contributorsCount}}</div>
            <div class='CollectiveCard-metric-label'>contributors</div>
          </div>
          <div class='CollectiveCard-metric'>
            <div class='CollectiveCard-metric-value'>{{currency yearlyIncome currency=currency precision=0}}</div>
            <div class='CollectiveCard-metric-label'>annual budget</div>
          </div>
        </div>
      </div>
      {{/if}}
    </div>
  </a>
</div>